#parse("head.vm")

<div class="portlet employees">
<h3>This is Niteco employees list using Portlet API, Spring and Velocity and API</h3>

<form action="$showAddUrl" method="post">
	#if ($employees)
	<table class="table-portlet">
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Team</th>
			<th>Role</th>
			<th>Salary</th>
			<th>City</th>
			#if ($mode.equals("Edit"))
			<th>Actions</th>
			#end
		</tr>
		#foreach ($employee in $employees)
		<tr>
			<td>$employee.id</td>
			<td>$employee.name</td>
			<td>$employee.email</td>
			<td>$employee.team</td>
			<td>$employee.role</td>
			<td>$employee.salary</td>
			<td>$!employee.city.cityName</td>
			#if ($mode.equals("Edit"))
			<td>
				#set( $editEmployee = $editUrl + "&employeeId=" + $employee.id )
                #set( $removeEmployee = $removeUrl + "&employeeId=" + $employee.id) 
                <a href="$editEmployee" >Edit</a>
                <a href="$removeEmployee" onclick="return confirm('Are you sure to delete this employee ?')" >Delete</a>
			</td>
			#end
		</tr>
		#end
	</table>
	#end
	#if ($mode.equals("Edit"))
	<input type="submit" value="Add employee" />
	#end
</form>
</div>